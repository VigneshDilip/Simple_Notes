      <section class="Form my-5 mx-10"> 
        <div class="container">
          <div class="row">
            <div class="col-lg-5">
                <img src="/undraw_secure_login_pdn4.svg" class="img-fluid" alt="">
            </div>
            <div class="col-lg-7 px-5 pt-3">
              <h1 class="font-weight-bold py-3">Login</h1>
              <h4>Sign in to your account</h4>
              <form action="/login" method="POST">
                <div class="form-row">
                  <div class="col-lg-7">
                    <% if (error!='') { %>
                      <div class="alert alert-danger" role="alert">
                        &empty; <%=error%>
                      </div>
                      <%}%>
                  </div>
                </div>
                <div class="form-row">
                  <div class="col-lg-7">
                    <input type="text" class="form-control my-3 p-2" name="name" id="exampleFormControlInput1" placeholder="Username" required>
                  </div>
                </div>
                <div class="form-row">
                  <div class="col-lg-7">
                    <input type="password" class="form-control my-3 p-2" name="password" id="exampleFormControlInput1" placeholder="Password" required>
                  </div>
                </div>
                <div class="form-row">
                  <div class="col-lg-7">
                    <button type="submit" class="btn1 mt-3 mb-5">Submit</button>
                  </div>
                </div>
                <p>Create an account? <a href="/register">Register</a> Here</p> 
              </form>
            </div>
          </div>
        </div>
      </section>

